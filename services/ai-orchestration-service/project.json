{
  "name": "ai-orchestration-service",
  "root": "services/ai-orchestration-service",
  "sourceRoot": "services/ai-orchestration-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo \"python service - no build step\""
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/ai-orchestration-service && black --check src && flake8 src"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/ai-orchestration-service && pytest -q"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/ai-orchestration-service && uvicorn app.main:app --host 0.0.0.0 --port ${PORT:-3017}"
      }
    }
  },
  "tags": ["type:service", "scope:ai"]
}
